<div class="container">
    <%= form_for @scene do |f| %>
        <%= f.label :name %>
        <p><%= f.text_field :name, placeholder: "Fill Me Out" %></p>
        
        <%= f.label :description %>
        <p><%= f.text_field :description, placeholder: "Fill Me Out" %></p>
        <%= f.submit "Add Scene" %>
    <% end %>
</div>

<h3><%= @post.name %></h3>
<p><%= @post.description %></p>
<div class="container">
    <div class="card">
        <%= @comments.each do |i| %>
            <h4><%= i.post.title %></h4>
            <p><%= i.content %></p>
            <small><%= i.member.username %></small>
        <% end %>
    </div>
</div>